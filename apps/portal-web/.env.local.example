# ===========================================
# Demiurge Portal Web - Environment Variables
# ===========================================
# Copy this file to .env.local for local development
# For Vercel: Set these in the Vercel Dashboard → Settings → Environment Variables

# -----------------
# Core API Endpoints
# -----------------

# AbyssID Service API (authentication, wallet, identity)
# Local: http://localhost:8082
# Production: https://api.demiurge.guru (or your deployed AbyssID service)
NEXT_PUBLIC_ABYSSID_API_URL=http://localhost:8082

# Demiurge Chain RPC Endpoint
# Local: http://127.0.0.1:8545/rpc
# Production: https://rpc.demiurge.cloud/rpc
NEXT_PUBLIC_DEMIURGE_RPC_URL=http://127.0.0.1:8545/rpc

# Abyss Gateway GraphQL Endpoint (indexer)
# Local: http://localhost:4000/graphql
# Production: https://gateway.demiurge.guru/graphql
NEXT_PUBLIC_ABYSS_GATEWAY_URL=http://localhost:4000/graphql

# ArchonAI Service (AI chat/conspire)
# Local: http://localhost:8083
# Production: https://archonai.demiurge.guru
NEXT_PUBLIC_ARCHONAI_URL=http://localhost:8083

# -----------------
# Genesis Configuration
# -----------------

# Enable Genesis mode (pre-launch features)
NEXT_PUBLIC_GENESIS_MODE=false

# Genesis Archon address (for testing)
NEXT_PUBLIC_GENESIS_ARCHON_ADDRESS=

# -----------------
# Fabric Configuration
# -----------------

# Fabric mode: "genesis" | "devnet" | "prod"
NEXT_PUBLIC_FABRIC_MODE=genesis

# Fabric endpoints (used when FABRIC_MODE is devnet/prod)
NEXT_PUBLIC_FABRIC_DEVNET_ENDPOINT=http://localhost:8080/api/fabric
NEXT_PUBLIC_FABRIC_PROD_ENDPOINT=https://fabric.demiurge.xyz/api/fabric

# Fabric refresh interval in milliseconds
NEXT_PUBLIC_FABRIC_REFRESH_INTERVAL=5000

# -----------------
# Operator Configuration (optional)
# -----------------

# Current user context (for dev/testing)
# NEXT_PUBLIC_CURRENT_USER_ID=default
# NEXT_PUBLIC_CURRENT_USER_ROLE=OBSERVER
# NEXT_PUBLIC_CURRENT_USER_NAME=Observer
